<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="preview_template" resource="default" engine="innodb" comment="Preview Email Template Name">
        <column xsi:type="int" name="id" nullable="false" unsigned="true" identity="true" comment="Preview Template ID"/>
        <column xsi:type="text" name="type" nullable="false" comment="Preview Template Type"/>
        <column xsi:type="text" name="name" comment="Preview Type Name"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
